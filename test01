<body>
    <div class="container">
        <div class="header">
            <h1>üè† ÂÄãÂÆ§„ÉÅ„É£„ÉÉ„Éà</h1>
            <div class="room-info" id="roomInfo"></div>
        </div>
        
        <!-- „É≠„Ç∞„Ç§„É≥ÁîªÈù¢ -->
        <div class="login-container" id="loginContainer">
            <div class="form-group">
                <label for="roomNumber">ÈÉ®Â±ãÁï™Âè∑</label>
                <input type="text" id="roomNumber" placeholder="‰æã: room123">
            </div>
            <div id="loginError"></div>
            <button class="btn" onclick="enterRoom()">ÂÖ•ÂÆ§„Åô„Çã</button>
            <button class="btn" onclick="createAndEnterRoom()" style="margin-top: 10px; background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">Êñ∞„Åó„ÅÑÈÉ®Â±ã„Çí‰ΩúÊàê</button>
        </div>
        
        <!-- „ÉÅ„É£„ÉÉ„ÉàÁîªÈù¢ -->
        <div class="chat-container hidden" id="chatContainer">
            <div id="statusMessage"></div>
            <div class="messages" id="messages">
                <div class="empty-state">„É°„ÉÉ„Çª„Éº„Ç∏„ÅØ„Åæ„Å†„ÅÇ„Çä„Åæ„Åõ„Çì</div>
            </div>
            <div class="loading hidden" id="loading">Ë™≠„ÅøËæº„Åø‰∏≠...</div>
        </div>
    </div>

    <script>
        // „Åì„Åì„Å´GAS„ÅÆWeb„Ç¢„Éó„É™URL„ÇíË®≠ÂÆö„Åó„Å¶„Åè„Å†„Åï„ÅÑ
        const API_URL = 'AKfycbx_NwnsbMTAnxZDYs4gIFjkkBYd6jujAVy8KTc0l7fqpkukyntEZNV4FS6w574E3PMisg';
        
        let currentRoom = null;
        let pollingInterval = null;
        let allMessages = []; // ÂèñÂæó„Åó„ÅüÂÖ®„É°„ÉÉ„Çª„Éº„Ç∏„Çí‰øùÊåÅ
        
        // URL„Éë„É©„É°„Éº„Çø„Åã„ÇâÈÉ®Â±ãÁï™Âè∑„ÇíÂèñÂæó
        window.addEventListener('DOMContentLoaded', () => {
            const params = new URLSearchParams(window.location.search);
            const roomFromUrl = params.get('room');
            if (roomFromUrl) {
                document.getElementById('roomNumber').value = roomFromUrl;
            }
        });
        
        // ÂÖ•ÂÆ§Âá¶ÁêÜ
        async function enterRoom() {
            const roomNumber = document.getElementById('roomNumber').value.trim();
            
            if (!roomNumber) {
                showError('loginError', 'ÈÉ®Â±ãÁï™Âè∑„ÇíÂÖ•Âäõ„Åó„Å¶„Åè„Å†„Åï„ÅÑ');
                return;
            }
            
            try {
                // ÈÉ®Â±ã„ÅÆÁä∂ÊÖã„ÇíÁ¢∫Ë™ç
                const response = await fetch(`${API_URL}?action=getRoomStatus&roomNumber=${roomNumber}`);
                const data = await response.json();
                
                if (!data.createdAt) {
                    showError('loginError', '„Åì„ÅÆÈÉ®Â±ã„ÅØÂ≠òÂú®„Åó„Åæ„Åõ„Çì');
                    return;
                }
                
                currentRoom = roomNumber;
                
                // ÁîªÈù¢Âàá„ÇäÊõø„Åà
                document.getElementById('loginContainer').classList.add('hidden');
                document.getElementById('chatContainer').classList.remove('hidden');
                document.getElementById('roomInfo').textContent = `ÈÉ®Â±ãÁï™Âè∑: ${roomNumber}`;
                
                // „Çπ„ÉÜ„Éº„Çø„ÇπË°®Á§∫
                showStatus(data);
                
                // „É°„ÉÉ„Çª„Éº„Ç∏ÂèñÂæóÈñãÂßã
                loadMessages();
                
                // 3Áßí„Åî„Å®„Å´Ëá™ÂãïÊõ¥Êñ∞
                pollingInterval = setInterval(loadMessages, 3000);
                
            } catch (error) {
                showError('loginError', '„Ç®„É©„Éº„ÅåÁô∫Áîü„Åó„Åæ„Åó„Åü: ' + error.message);
            }
        }
        
        // ÈÉ®Â±ã‰ΩúÊàê„Åó„Å¶ÂÖ•ÂÆ§
        async function createAndEnterRoom() {
            const roomNumber = document.getElementById('roomNumber').value.trim();
            
            if (!roomNumber) {
                showError('loginError', 'ÈÉ®Â±ãÁï™Âè∑„ÇíÂÖ•Âäõ„Åó„Å¶„Åè„Å†„Åï„ÅÑ');
                return;
            }
            
            try {
                // ÈÉ®Â±ã„Çí‰ΩúÊàê
                const response = await fetch(API_URL, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        action: 'createRoom',
                        roomNumber: roomNumber
                    })
                });
                
                const data = await response.json();
                
                if (!data.success) {
                    showError('loginError', data.error || 'ÈÉ®Â±ã„ÅÆ‰ΩúÊàê„Å´Â§±Êïó„Åó„Åæ„Åó„Åü');
                    return;
                }
                
                // ‰ΩúÊàêÊàêÂäü„Åó„Åü„ÇâÂÖ•ÂÆ§
                await enterRoom();
                
            } catch (error) {
                showError('loginError', '„Ç®„É©„Éº„ÅåÁô∫Áîü„Åó„Åæ„Åó„Åü: ' + error.message);
            }
        }
        
        // „É°„ÉÉ„Çª„Éº„Ç∏ÂèñÂæó
        async function loadMessages() {
            if (!currentRoom) return;
            
            try {
                const response = await fetch(`${API_URL}?action=getMessages&roomNumber=${currentRoom}`);
                const data = await response.json();
                
                // Êñ∞„Åó„ÅÑ„É°„ÉÉ„Çª„Éº„Ç∏„Çí„Éû„Éº„Ç∏
                mergeMessages(data.messages || []);
                
                // „Åô„Åπ„Å¶„ÅÆ„É°„ÉÉ„Çª„Éº„Ç∏„ÇíË°®Á§∫
                displayMessages(allMessages);
                
            } catch (error) {
                console.error('„É°„ÉÉ„Çª„Éº„Ç∏ÂèñÂæó„Ç®„É©„Éº:', error);
            }
        }
        
        // „É°„ÉÉ„Çª„Éº„Ç∏„Çí„Éû„Éº„Ç∏(ÈáçË§á„ÇíÈÅø„Åë„Å¶ËøΩÂä†)
        function mergeMessages(newMessages) {
            newMessages.forEach(newMsg => {
                // „Çø„Ç§„É†„Çπ„Çø„É≥„Éó„Å®„É¶„Éº„Ç∂„ÉºID„Å®„É°„ÉÉ„Çª„Éº„Ç∏ÂÜÖÂÆπ„ÅßÈáçË§á„ÉÅ„Çß„ÉÉ„ÇØ
                const exists = allMessages.some(msg => 
                    msg.timestamp === newMsg.timestamp && 
                    msg.userId === newMsg.userId &&
                    msg.message === newMsg.message
                );
                
                if (!exists) {
                    allMessages.push(newMsg);
                }
            });
            
            // „Çø„Ç§„É†„Çπ„Çø„É≥„Éó„Åß„ÇΩ„Éº„Éà
            allMessages.sort((a, b) => a.timestamp - b.timestamp);
        }
        
        // „É°„ÉÉ„Çª„Éº„Ç∏Ë°®Á§∫
        function displayMessages(messages) {
            const messagesDiv = document.getElementById('messages');
            
            if (messages.length === 0) {
                messagesDiv.innerHTML = '<div class="empty-state">„É°„ÉÉ„Çª„Éº„Ç∏„ÅØ„Åæ„Å†„ÅÇ„Çä„Åæ„Åõ„Çì</div>';
                return;
            }
            
            messagesDiv.innerHTML = messages.map(msg => {
                const date = new Date(msg.timestamp);
                const timeStr = date.toLocaleTimeString('ja-JP', { 
                    hour: '2-digit', 
                    minute: '2-digit' 
                });
                
                return `
                    <div class="message">
                        <div class="message-header">
                            <span class="message-user">${escapeHtml(msg.userId)}</span>
                            <span>${timeStr}</span>
                        </div>
                        <div class="message-content">${escapeHtml(msg.message)}</div>
                    </div>
                `;
            }).join('');
            
            // ÊúÄÊñ∞„É°„ÉÉ„Çª„Éº„Ç∏„Åæ„Åß„Çπ„ÇØ„É≠„Éº„É´
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        }
        
        // „Çπ„ÉÜ„Éº„Çø„ÇπË°®Á§∫
        function showStatus(data) {
            const statusDiv = document.getElementById('statusMessage');
            const userCount = data.userCount || 0;
            const isFull = data.isFull;
            
            let message = `ÁèæÂú®„ÅÆÂèÇÂä†ËÄÖÊï∞: ${userCount}/2‰∫∫`;
            if (isFull) {
                message += ' (Ê∫ÄÂì°)';
            }
            
            statusDiv.innerHTML = `<div class="status">${message}</div>`;
        }
        
        // „Ç®„É©„ÉºË°®Á§∫
        function showError(elementId, message) {
            const errorDiv = document.getElementById(elementId);
            errorDiv.innerHTML = `<div class="error">${escapeHtml(message)}</div>`;
            setTimeout(() => {
                errorDiv.innerHTML = '';
            }, 5000);
        }
        
        // HTML„Ç®„Çπ„Ç±„Éº„Éó
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
        
        // „Éö„Éº„Ç∏Èõ¢ËÑ±ÊôÇ„Å´„Éù„Éº„É™„É≥„Ç∞ÂÅúÊ≠¢
        window.addEventListener('beforeunload', () => {
            if (pollingInterval) {
                clearInterval(pollingInterval);
            }
        });
    </script>
